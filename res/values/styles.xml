<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="itemStyle" >
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/selector_setting_items</item>
    </style>
    <style name="backStyle" >
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">@dimen/back_text_size</item>
    </style>
    <style name="line_1px">
        <item name="android:background">@color/setting_line_bg</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">1px</item>
    </style>
    <style name="line_weight_fill">
        <item name="android:background">@color/setting_line_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>
    <style name="line_vertical">
        <item name="android:background">@color/setting_line_bg</item>
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">100dp</item>
    </style>
    <style name="userinfo">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">100dp</item>
    </style>

</resources>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <include
        android:id="@+id/include_head"
        layout="@layout/title_setting_layout" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/include_head"
        android:gravity="top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/top_title_bg"
            android:gravity="center"
            android:text="user" />

        <RelativeLayout
            android:id="@+id/rl_user_info"
            style="@style/itemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="个人信息"
                android:textSize="18sp" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_user_info"
                android:layout_margin="10dp"
                android:layout_marginRight="14dp"
                android:padding="5dp"
                android:src="@drawable/mm_submenu_normal" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_user_goal"
            style="@style/itemStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_user_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                 android:layout_margin="10dp"
                android:padding="10dp"
                android:text="目标设置"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/mm_submenu_normal" />

            <View
                android:id="@+id/user_line_2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FFDADADA" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_user_connect"
            style="@style/itemStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_user_connect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                    android:layout_margin="10dp"
                android:padding="10dp"
                android:text="连接其他设备"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:src="@drawable/mm_submenu_normal" />

            <View
                android:id="@+id/user_line_3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FFDADADA" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_user_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_setting_items"
            android:clickable="true"
            android:focusable="true" >

            <TextView
                android:id="@+id/tv_user_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                   android:layout_margin="10dp"
                android:padding="10dp"
                android:text="关于"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:src="@drawable/mm_submenu_normal" />

            <View
                android:id="@+id/user_line_4"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FFDADADA" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${packageName}.${activityClass}" >

    <include
        android:id="@+id/include1"
        layout="@layout/title_userinfo_layout" />

    <TextView
        android:layout_marginTop="35dp"
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include1"
        android:layout_centerHorizontal="true"
        android:text="user" />

	<View
	    android:id="@+id/hor_line1"
	    style="@style/line_1px"
	    android:layout_marginTop="1dp"
	    android:layout_below="@id/username"
	    android:layout_centerHorizontal="true" />
	
	<View
	    android:layout_marginTop="20dp"
	    android:id="@+id/hor_line2"
	    style="@style/line_weight_fill"
	    android:layout_below="@id/hor_line1"
	    android:layout_centerHorizontal="true" />

	<LinearLayout
	    android:id="@+id/LL1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    android:layout_below="@+id/hor_line2" >

		<LinearLayout
		    style="@style/userinfo"
		    android:orientation="vertical" >

			<LinearLayout
			    android:layout_margin="10dp"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" >
			    
			    <CheckBox
			        android:id="@+id/men_check"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:button="@drawable/selector_men"
			        android:checked="true"
			        android:clickable="true"
			         />

			    <CheckBox
			        android:id="@+id/women_check"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:button="@drawable/selector_women"
			        android:checked="false"
			        android:clickable="true"
			         />

			</LinearLayout>

			<TextView
			    android:id="@+id/sex"
			    android:layout_width="wrap_content"
			    android:layout_height="match_parent"
			    android:layout_gravity="center"
			    android:text="男" />
			
		</LinearLayout>
			<View
		    android:id="@+id/line_vertical_1"
		    style="@style/line_vertical"
		   />
		<LinearLayout
			 style="@style/userinfo"
			 
		    android:orientation="vertical" >

			<LinearLayout
			    android:padding="15dp"
			    android:layout_margin="10dp"
				 android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			      android:layout_gravity="center"
			    android:orientation="horizontal" >
			    
			    <TextView
			        android:id="@+id/tv_1"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_gravity="center"
			        android:text="161" />

			    <TextView
			        android:id="@+id/tv_2"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:layout_gravity="center"
			        android:text="cm" />

			</LinearLayout>

			<TextView
			    android:id="@+id/tv_3"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    android:text="身高" />
			
		</LinearLayout>

	</LinearLayout>

<View
	    android:id="@+id/hor_line3"
	    style="@style/line_weight_fill"
	    android:layout_below="@id/LL1"
	    android:layout_centerHorizontal="true" />
<LinearLayout
	    android:id="@+id/LL2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    android:layout_below="@+id/hor_line3" >

		<LinearLayout
		    android:padding="15dp"
			 style="@style/userinfo"
		    android:orientation="vertical" >

			<LinearLayout
			    android:layout_margin="10dp"
				 android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			      android:layout_gravity="center"
			    android:orientation="horizontal" >
			    
			    <TextView
			        android:id="@+id/value_weight"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent"
			        android:layout_gravity="center"
			        android:text="41" />

			    <TextView
			        android:id="@+id/unit_weight"
			        android:layout_width="wrap_content"
			        android:layout_height="match_parent"
			        android:layout_gravity="center"
			        android:text="kg" />

			</LinearLayout>

			<TextView
			    android:id="@+id/info_weight"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_gravity="center"
			    android:text="体重" />
			
		</LinearLayout>
			<View
		    android:id="@+id/line_vertical_2"
		    style="@style/line_vertical"
		   />
		<LinearLayout
		    
			 style="@style/userinfo"
		    android:orientation="vertical" 
		    android:padding="30dp"
		    >

		
			    
			    <TextView
			        android:id="@+id/value_birthday"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center"
			        android:text="1920-01-01" />

			    <TextView
			        android:id="@+id/birthday"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_gravity="center"
			        android:text="生日" />

			
			
		</LinearLayout>

	</LinearLayout>
	<View
	    android:id="@+id/hor_line4"
	    style="@style/line_weight_fill"
	    android:layout_below="@id/LL2"
	    android:layout_centerHorizontal="true" />
</RelativeLayout>